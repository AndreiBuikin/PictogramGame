<Window x:Class="PictogramGame.Views.Rules"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PictogramGame.Views"
        mc:Ignorable="d"
        Title="Правила" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Правила игры" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,10" />

        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Вам предлагается лист, на котором написана пословица." FontSize="16" Margin="0,0,0,10" />
            <TextBlock Text="В тексте некоторые слова заменены пиктограммами." FontSize="16" Margin="0,0,0,10" />
            <TextBlock Text="Ваша задача - восстановить словесный текст полностью." FontSize="16" Margin="0,0,0,10" />
            <TextBlock Text="Вы выигрываете, если правильно восстановите не менее половины исходного текста." FontSize="16" Margin="0,0,0,10" />
        </StackPanel>

        <Button Grid.Row="1" Content="Закрыть" FontSize="24" Width="142" Margin="0,209,0,113" HorizontalAlignment="Center" Click="CloseButton_Click" />
    </Grid>
</Window>
